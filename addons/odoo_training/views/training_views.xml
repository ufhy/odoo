<odoo>
  <data>
    <!-- Membuat View Tree/List Course -->

    <record model="ir.ui.view" id="training_course_view_tree">
      <field name="name">training_course.tree</field>
      <field name="model">training.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="user_id"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Membuat View Form Course -->

    <record id="training_cource_view_form" model="ir.ui.view">
      <field name="name">training.course.form</field>
      <field name="model">training.course</field>
      <field name="arch" type="xml">
        <form string="Course Form">
          <sheet>
            <group>
              <field name="name"/>
              <field name="user_id"/>
            </group>
            <notebook>
              <page string="Sesi">
                <field name="session_line" mode="tree,kanban" nolabel="1">
                  <tree string="Sesi" editable="bottom">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                  </tree>
                  <form string='Sesi'>
                    <group>
                      <field name="name"/>
                      <field name="partner_id"/>
                      <field name="start_date"/>
                      <field name="duration"/>
                      <field name="seats"/>
                    </group>
                  </form>
                </field>
              </page>
              <page string="Cendera Mata">
                <field name="product_ids" nolabel="1"/>
              </page>
              <page string="Keterangan">
                <group>
                  <field name="description"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Membuat Action Course -->
    <record id="training_course_action" model="ir.actions.act_window">
      <field name="name">Course</field>
      <field name="res_model">training.course</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p name="o_view_nocontent_smiling_face">
          Buatlah kursus pertamamu ...
        </p>
      </field>
    </record>

    <!-- Membuat Menu Dashboard -->
    <menuitem id="menu_dashboard_training" name="Training" />
    
    <!-- Membuat Menu Bar Training -->
    <menuitem id="menu_bar_training" name="Training" parent="menu_dashboard_training"/>
    
    <!-- Membuat Menu Item Course -->
    <menuitem id="menu_item_training_course" name="Course" parent="menu_bar_training" action="training_course_action"/>
  </data>
</odoo>
